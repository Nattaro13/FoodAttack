<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foodattack.foodattack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.foodattack.foodattack.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foodattack.foodattack.StockList"
            android:label="@string/title_activity_stock_list"
            android:parentActivityName="com.foodattack.foodattack.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foodattack.foodattack.MainActivity" />
        </activity>
        <activity
            android:name="com.foodattack.foodattack.ShopList"
            android:label="@string/title_activity_shop_list"
            android:parentActivityName="com.foodattack.foodattack.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foodattack.foodattack.MainActivity" />
        </activity>
        <activity
            android:name="com.foodattack.foodattack.RecipeList"
            android:label="@string/title_activity_recipe_list"
            android:parentActivityName="com.foodattack.foodattack.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foodattack.foodattack.MainActivity" />
        </activity>
        <activity
            android:name="com.foodattack.foodattack.RollCallActivity"
            android:label="@string/title_activity_roll_call"
            android:parentActivityName="com.foodattack.foodattack.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foodattack.foodattack.MainActivity" />
        </activity>
    </application>

</manifest>