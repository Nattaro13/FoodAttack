<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.foodattack.foodattack.MainSettingsActivity">

    <Button
        android:id="@+id/btn_view_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_family_status"
        android:background="@drawable/custom_btn_main"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:onClick="viewFamily"
        />

    <Button
        android:id="@+id/btn_add_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_add_family"
        android:background="@drawable/custom_btn_main"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:onClick="addFamily"
        />

    <Button
        android:id="@+id/btn_remove_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_remove_family"
        android:background="@drawable/custom_btn_main"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:onClick="removeFamily"
        />

</LinearLayout>
