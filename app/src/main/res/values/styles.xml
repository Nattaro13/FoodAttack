<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>


        <!-- Overall App Text Color, affects overflow bar as well -->
        <item name="android:textColor">@color/action_item_text_color</item>

        <!-- Overflow menus -->
        <item name="android:actionBarWidgetTheme">@style/PopupWrapper</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>



    <!-- OverFlow menu Styles: Override Holo Dark Wrapper, then put colors -->
    <style name="PopupWrapper" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <!-- Background color for Action Bar overflow menu -->
    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_overflow</item>
    </style>

    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">#BDBDBD</item>
        <item name="android:dividerHeight">1dp</item>
    </style>





</resources>
